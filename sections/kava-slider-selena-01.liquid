  document.addEventListener('DOMContentLoaded', function() {
  // Get section id
  let sec_id   = "{{sec_id}}";

  // Slider and its settigns
  let slider        = document.querySelector('.pw-section__' + sec_id + ' .siema');
  let controls      = slider.getAttribute('data-controls');
  let controls_dots = slider.getAttribute('data-controls-dots');
  let autoplay      = slider.getAttribute('data-autoplay') === 'true'? true : false;
  let loop          = slider.getAttribute('data-loop') === 'true'? true : false;
  let delay         = slider.getAttribute('data-delay');

  window['siema__' + sec_id] = new Siema({
	selector: slider,
	duration: 500,
	easing: 'ease-out',
	perPage: {
	  320: 1
	},
	startIndex: 0,
	draggable: true,
	multipleDrag: true,
	threshold: 20,
	loop: loop,
	rtl: false,
	onInit: () => {},
	onChange: () => {
      if ( controls_dots == "true" ) {
        let dots = document.querySelectorAll('.siema-pagination-wrapper_' + sec_id + ' .siema-pagination');
        for ( let d=1; d<= dots.length; d++ ) {
          dots[d-1].classList.remove('active')
        }
        document.querySelectorAll('.siema-pagination-wrapper_' + sec_id + ' .siema-pagination')[window['siema__' + sec_id].currentSlide].classList.add('active');
      }
    },
  });

  // Controls
  window['siema_prev__' + sec_id] = document.querySelector('.pw-section__' + sec_id + ' .siema-prev');
  window['siema_next__' + sec_id] = document.querySelector('.pw-section__' + sec_id + ' .siema-next');

  if (controls == "true" && window['siema_prev__' + sec_id] !== null && window['siema_next__' + sec_id] !== null) {
	// Add prev event listener
	window['siema_prev__' + sec_id].addEventListener('click', function(e){
	  var sec_id_n = this.getAttribute('data-sec-id');
	  window['siema__' + sec_id_n].prev();
	});
	// Add next event listenter
	window['siema_next__' + sec_id].addEventListener('click', function(e){
	  var sec_id_n = this.getAttribute('data-sec-id');
	  window['siema__' + sec_id_n].next();
	});
  }
  
  if (autoplay) {
	setInterval(function(){
	  window['siema__' + sec_id].next();
	}, delay);
  }

  // Pagination
  if ( controls_dots == "true" ) {
    window['siema__' + sec_id].addPagination = function() {
      for (let i = 1; i <= this.innerElements.length; i++) {
        const btn = document.createElement('button');
        btn.classList.add('siema-pagination');
        btn.textContent = i-1;
        if ( i == 1 ) {
          btn.classList.add('active');
        }
        btn.addEventListener('click', () => this.goTo(i-1) );
        document.querySelector('.siema-pagination-wrapper_' + sec_id).appendChild(btn);
      }
    }
    window['siema__' + sec_id].addPagination();
  }

});


.pw-section__{{sec_id}} .siema-pagination {
  width: 10px;
  height: 10px;
  padding: 0;
  font-size: 0;
  border-radius: 50%;
  border: 0;
  background-color: #ccc;
  margin: 10px 5px;
  cursor: pointer;
}


.pw-section__{{sec_id}} .pw-slide-img .placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.pw-section__{{sec_id}} .siema > div > div:nth-child(3n+1) .placeholder {
  background: url('https://cdn.shopify.com/s/files/1/0511/2465/files/about-riley-03.jpg') no-repeat center/cover;
}

.pw-section__{{sec_id}} .siema > div > div:nth-child(3n+2) .placeholder {
  background: url('https://cdn.shopify.com/s/files/1/0511/2465/files/about-riley-01.jpg') no-repeat center/cover;
}

.pw-section__{{sec_id}} .siema > div > div:nth-child(3n+3) .placeholder {
  background: url('https://cdn.shopify.com/s/files/1/0511/2465/files/about-grace-02.jpg') no-repeat center/cover;
}


{% if section.settings.inherit_fonts == false %}
  .pw-section__{{sec_id}} h1.pw-section-title {
    font-size: 72px;
  }
  .pw-section__{{sec_id}} h2.pw-section-title {
    font-size: 56px;
  }
  .pw-section__{{sec_id}} h3.pw-section-title {
    font-size: 32px;
  }
  .pw-section__{{sec_id}} .pw-section-text,
  .pw-section__{{sec_id}} .pw-section-text p {
    font-size: 24px;
  }
  .pw-section__{{sec_id}} .pw-feature {
    font-size: 18px;
  }
  .pw-btn, .rte a.pw-btn:not(.btn) {
    font-size: 18px;
  }

{% endif %}


@media only screen and (max-width: 1199px) {
  .pw-section__{{sec_id}} .two-columns-text {
    padding: 50px 5%;
  }
}

@media only screen and (max-width: 991px) {
  .pw-section__{{sec_id}} .two-columns-text {
    width: 100%;
    text-align: center;
    order: -1;
  }
  .pw-section__{{sec_id}} .two-columns-media {
    width: 100%;
  }
  .pw-section__{{sec_id}} .pw-section-title {
    max-width: none;
  }
  .pw-section__{{sec_id}} .pw-section-text,
  .pw-section__{{sec_id}} .pw-section-text p {
    max-width: none;
  }
}

@media only screen and (max-width: 749px) {
  .pw-section__{{sec_id}} .two-columns-text {
    padding: 30px 25px;
  }
  .pw-section__{{sec_id}} .pw-divider {
    width: 120px;
  }
  .pw-section__{{sec_id}} {
    padding-top: {{section.settings.section_padding_top_mobile}}px;
    padding-bottom: {{section.settings.section_padding_bottom_mobile}}px;
  }
  {% if section.settings.inherit_fonts == false %}
    .pw-section__{{sec_id}} h1.pw-section-title {
      font-size: 50px;
    }
    .pw-section__{{sec_id}} h2.pw-section-title {
      font-size: 40px;
    }
    .pw-section__{{sec_id}} h3.pw-section-title {
      font-size: 26px;
    }
    .pw-section__{{sec_id}} .pw-section-text,
    .pw-section__{{sec_id}} .pw-section-text p {
      font-size: 20px;
    }
    .pw-section__{{sec_id}} .pw-feature {
      font-size: 16px;
    }
    .pw-btn, .rte a.pw-btn:not(.btn) {
      font-size: 16px;
    }

  {% endif %}
}

{%- endstyle -%}

{% if section.settings.custom_css != blank %}
  {%- style -%}
  {{section.settings.custom_css}}
  {%- endstyle -%}
{% endif %}

{% if section.settings.is_fullwidth == true %}
  {% assign container = 'pw-container-fluid' %}
{% else %}
  {% assign container = 'pw-container' %}
{% endif %}


<div class="pw-section__{{sec_id}}">
  <div class="{{container}}">
    <div class="two-columns-row">
      <div class="two-columns-text">
        <div class="two-columns-text-inner">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'heading' %}
              {% if block.settings.heading_text != blank %}
                <{{ block.settings.heading_tag }} class="pw-section-title" {{ block.shopify_attributes }}>
                {{ block.settings.heading_text | escape }}
                </{{ block.settings.heading_tag }}>
              {% endif %}

              {% when 'divider' %}
              <span class="pw-divider" style="--divider-color: {{block.settings.divider_color}}" {{ block.shopify_attributes }}></span>

              {% when 'text' %}
              {% if block.settings.section_text != blank %}
                <div class="pw-section-text" {{ block.shopify_attributes }}>
                  {{ block.settings.section_text }}
                </div>
              {% endif %}

              {% when 'feature' %}
                <div {{ block.shopify_attributes }}>
                  <p class="pw-feature" {{ block.shopify_attributes }} style="--check-color: {{block.settings.check_color}}">
                    {{ block.settings.about_list_item }}
                  </p>
                </div>
              {% when 'buttons' %}
              <div class="pw-section-btns" {{ block.shopify_attributes }}>
                {% if block.settings.button_label_1 != blank %}
                  <a href="{{block.settings.button_link_1}}" 
                      class="pw-btn {% if block.settings.button_is_rounded_1 == true %} pw-btn-rounded {% endif %}" 
                      style="background-color: {{block.settings.btn_bg_1}}; color: {{block.settings.btn_color_1}};">
                    {{block.settings.button_label_1}}
                  </a>
                {% endif %}
              </div>
              {% endcase %}
          {% endfor %}
        </div>
      </div>

      <div class="two-columns-media">
        <div class="two-columns-media-inner">
          <div class="siema-slider-wrapper">
            <div class="siema" 
              data-controls="{{section.settings.controls}}" 
              data-controls-dots="{{section.settings.controls_dots}}" 
              data-autoplay="{{section.settings.autoplay}}" 
              data-delay="{{section.settings.delay}}" 
              data-loop="{{section.settings.loop}}"> 
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'slide' %}
                    <div class="pw-slide" {{ block.shopify_attributes }}>
                      <div class="pw-slide-img">
                        {% if block.settings.background_image == blank %}
                          <div class="placeholder"></div>
                        {% else %}
                          <img srcset="
                            {%- if block.settings.background_image.width >= 320 -%}{{ block.settings.background_image | img_url: '320x' }} 320w,{%- endif -%}
                            {%- if block.settings.background_image.width >= 750 -%}{{ block.settings.background_image | img_url: '750x' }} 750w,{%- endif -%}
                            {%- if block.settings.background_image.width >= 1500 -%}{{ block.settings.background_image | img_url: '1500x' }} 1500w,{%- endif -%}
                            {%- if block.settings.background_image.width >= 2000 -%}{{ block.settings.background_image | img_url: '2000x' }} 2000w,{%- endif -%}"
                            src="{{ block.settings.background_image | img_url: '1500x' }}"
                            alt="{{ block.settings.background_image.alt | escape }}"
                            sizes="100vw"
                            {% if section.settings.lazyload == true %} loading="lazy" {% endif %}
                          >
                        {% endif %}
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
            <div class="siema-pagination-wrapper siema-pagination-wrapper_{{sec_id}}"></div>
            
            {% if section.settings.controls == true %}
              <button class="siema-prev" data-sec-id="{{sec_id}}">Prev</button>
              <button class="siema-next" data-sec-id="{{sec_id}}">Next</button>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

